[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    st = status
    co = checkout
    amend = commit -a --amend
    pom = push origin master
    l = "!bash -c 'source ~/.mjwdotfiles/githelpers && pretty_git_log'"
[user]
    name = GITNAME
    email = GITEMAIL
[color]
    ui = true
[push]
	default = simple
[core]
	autocrlf = input
